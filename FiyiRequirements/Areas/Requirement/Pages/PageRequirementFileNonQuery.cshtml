@page
@using FiyiRequirements.Areas.Requirement.Models
@model FiyiRequirements.Areas.Requirement.Pages.PageRequirementFileNonQueryModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int RequirementFileId;
    int RequirementId;
    string FileName;
    string FilePath;
    

    if(HttpContext.Request.QueryString.Value.Contains("?RequirementFileId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        RequirementFileId = 0;
        RequirementId = 0;FileName = "";
        FilePath = "";
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        RequirementFileModel RequirementFileModel = new RequirementFileModel().Select1ByRequirementFileIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?RequirementFileId=","")));

        RequirementFileId = RequirementFileModel.RequirementFileId;
        RequirementId = RequirementFileModel.RequirementId;
        FileName = RequirementFileModel.FileName;
        FilePath = RequirementFileModel.FilePath;
        
    }

