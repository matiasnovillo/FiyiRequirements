@page
@using FiyiRequirements.Areas.Requirement.Models
@model FiyiRequirements.Areas.Requirement.Pages.PageClientNonQueryModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int ClientId;
    string FirstName;
    string LastName;
    string BusinessName;
    string PhoneNumber;
    string Email;
    

    if(HttpContext.Request.QueryString.Value.Contains("?ClientId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        ClientId = 0;
        FirstName = "";
        LastName = "";
        BusinessName = "";
        PhoneNumber = "";
        Email = "";
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        ClientModel ClientModel = new ClientModel().Select1ByClientIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?ClientId=","")));

        ClientId = ClientModel.ClientId;
        FirstName = ClientModel.FirstName;
        LastName = ClientModel.LastName;
        BusinessName = ClientModel.BusinessName;
        PhoneNumber = ClientModel.PhoneNumber;
        Email = ClientModel.Email;
        
    }

